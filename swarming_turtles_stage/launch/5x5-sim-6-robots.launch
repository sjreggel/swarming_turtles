<launch>
    <param name="use_sim_time" value="true" />

    <node name="map_server" pkg="map_server" type="map_server" args="$(find swarming_turtles_stage)/world/5x5_map.yaml"/>
    <node pkg="stage_ros" type="stageros" name="stageros" args="$(find swarming_turtles_stage)/world/5x5-6-robots.world" respawn="false" output="screen" />

    <node pkg="tf" type="static_transform_publisher" name="tf_world_map" args="0 0 0 0 0 0 /map /world 100" respawn="false" output="screen" />

    <node pkg="swarming_turtles_smach" type="start_all.py" name="start_all_helper" respawn="false" output="screen" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find swarming_turtles_stage)/sim_view.rviz" output="screen" />

    <node name="food_location_publisher" pkg="swarming_turtles_stage" type="food_location_publisher.py" respawn="true" output="screen"/>

    <include file="$(find swarming_turtles_shepherd)/launch/shepherd_teleop_joy.launch" >
    </include>

    <include file="$(find swarming_turtles_stage)/launch/shepherd.launch" >
     <arg name="robot" value="robot_0" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
     <arg name="robot" value="robot_1" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
     <arg name="robot" value="robot_2" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
    <arg name="robot" value="robot_3" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
    <arg name="robot" value="robot_4" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
    <arg name="robot" value="robot_5" />
    </include>

    <include file="$(find swarming_turtles_stage)/launch/robot.launch" >
    <arg name="robot" value="robot_6" />
    </include>

    <!-- <include file="$(find swarming_turtles_stage)/launch/robot.launch" > -->
    <!--  <arg name="robot" value="robot_4" /> -->
    <!-- </include> -->

    <!-- <include file="$(find swarming_turtles_stage)/launch/robot.launch" > -->
    <!--  <arg name="robot" value="robot_5" /> -->
    <!-- </include> -->

</launch>
